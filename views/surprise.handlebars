		input[type="radio"]:hover, input[type="radio"]:checked {
		  background: #428bca;
		  box-shadow: inset 0 0 0 0.6em white, 0 0 0 0.3em;
		}
		input[type="radio"]:checked {
		  background: #000;
		  box-shadow: inset 0 0 0 0.2em white, 0 0 0 0.2em #000;
		}
		input[type="radio"]:focus {
		  outline: 0;
		}

