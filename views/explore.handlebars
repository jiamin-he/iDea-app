      </a>
    
    {{/each}}
    </nav> -->

    <nav class="icon-bar fixed-bottom">

    {{#each bottom-bar}}
    
      <a href="/{{name}}" ><i class="{{class}}"></i>
        <!-- <p>{{name}}</p> -->
      </a>
    
    {{/each}}
    </nav>




</div>

  
