  <!-- menu bar -->
  <!-- <div class="btn-group" style="width:100%">
    <button id="trending" style="width:50%">Trending</button>
    <button style="width:50%">Newest</button>
  </div> -->


  <ul class="nav nav-pills nav-justified nav-tabs" role="tablist" id="nav">
    <li class="nav-item">
      <a class="nav-link active" id="newestSort" data-toggle="tab" href="#newest" role="tab" aria-controls="newest" aria-selected="true">Newest</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="trendingSort" data-toggle="tab" href="#trending" role="tab" aria-controls="trending" aria-selected="false">Trending</a>
    </li>
  </ul>

<div>
  <div class="tab-content container" data-spy="scroll">

    <div class="tab-pane fade show active" id="newest" role="tabpanel" aria-labelledby="newestSort">
      <br />
      <div class="card-columns">
        <div class="row">
          {{#each ideas}}
            {{#ifvalue property desired="public"}}
            {{#ifvalue userTried desired="false"}} 
            {{#ifvalue myList desired="false"}} 
            <div class="col-sm-6" id="block-newest-{{id}}">
              <div class="card">
                <div class="card-body">
                <img class="card-img-top img-fluid" style="width:4em; display: block;margin-left: auto;margin-right: auto;"  src="/img/{{feeling}}.png" alt="Card image cap">
                <h5 class="card-title capitalize" style="text-align: center;"><a href="idea/{{id}}">{{title}}</a></h5>
              

                <!-- {{#ifvalue myList desired="true"}}              
                <a href="/add_to_my_list/explore/{{id}}" class=" top_right_button_card" ><i class="fas fa-minus fa-lg"></i></a> -->
                <!-- <a class=" top_right_button_card" ><i class="fas fa-minus fa-lg"></i></a> -->

                <!-- {{/ifvalue}} -->

                         
              <a href="/add_to_my_list/explore/{{id}}" class=" top_right_button_card" id="top_right_button_newest_{{id}}"><i class="fas fa-plus fa-lg"></i></a>
              <!-- <a class=" top_right_button_card" ><i class="fas fa-plus fa-lg"></i></a> -->

            

              <p class="card-text" style="text-align: center;">{{description}}
              <br />
              <br />
              <a href="/surprise_list/feeling/{{feeling}}"><span class="badge badge-primary">{{feeling}}</span></a>
              <a href="/surprise_list/time/{{time}}"><span class="badge badge-success">{{time}}</span></a>
              <a href="/surprise_list/cost/{{cost}}"><span class="badge badge-warning">{{cost}}</span></a>
              </p>

              
              <!-- <p class= "bottom-right">Provider:<a href="/user/{{name}}">{{name}}</a></p> -->
            </div>
            <div class="card-footer">
                  <small class="text-muted"><i class="fas fa-check"></i>  {{tried}} people tried this idea.</small>
            </div>
          </div>
         </div>
         {{/ifvalue}}
         {{/ifvalue}}
        {{/ifvalue}}
      {{/each}}
    </div>
    </div>
  </div>

  <div class="tab-pane fade" id="trending" role="tabpanel" aria-labelledby="trendingSort">
     <br />
     <div class="card-columns">
    <div class="row">
    {{#each ideas2}}
        {{#ifvalue property desired="public"}}
        {{#ifvalue userTried desired="false"}} 
          <div class="col-sm-6" id="block-trending-{{id}}">
            <div  class="card">
              <div class="card-body">
              <img class="card-img-top img-fluid" style="width:4em; display: block;margin-left: auto;margin-right: auto;"  src="/img/{{feeling}}.png" alt="Card image cap">
              <h5 class="card-title capitalize" style="text-align: center;"><a href="idea/{{id}}" >{{title}}</a></h5>

              <!-- {{#ifvalue myList desired="true"}}              
              <a href="/add_to_my_list/explore/{{id}}" class=" top_right_button_card" ><i class="fas fa-minus fa-lg"></i></a> -->
              <!-- <a class=" top_right_button_card" ><i class="fas fa-minus fa-lg"></i></a> -->

              <!-- {{/ifvalue}} -->

                           
              <a href="/add_to_my_list/explore/{{id}}" class=" top_right_button_card" id="top_right_button_trending_{{id}}"><i class="fas fa-plus fa-lg"></i></a>
              <!-- <a class=" top_right_button_card" ><i class="fas fa-plus fa-lg"></i></a> -->

              
              <p class="card-text" style="text-align: center;">{{description}}
              <br />
              <br />
              <span class="badge badge-primary">{{feeling}}</span>
              <span class="badge badge-success">{{time}}</span>
              <span class="badge badge-warning">{{cost}}</span></p>
               
              <!-- <p class= "bottom-right">Provider:<a href="/user/{{name}}">{{name}}</a></p> -->
            </div>
            <div class="card-footer">
                  <small class="text-muted"><i class="fas fa-check"></i>  {{tried}} people tried this idea.</small>
            </div>
          </div>
        </div>
        {{/ifvalue}}
        {{/ifvalue}}
      {{/each}}
    </div>
    </div>
  </div>
</div>

  <div class="icon-bar fixed-bottom">

    {{#each bottom-bar}}
    
      <a href="/{{name}}" ><i class="{{class}}"></i>
        <!-- <p>{{name}}</p> -->
      </a>
    
    {{/each}}
    </div>

</div>
  
