  <div class="btn-group" style="width:100%">
    <button id="trending" style="width:50%">Trending</button>
    <button style="width:50%">Newest</button>
  </div>

  <div class="grid-container container" data-spy="scroll">

    {{#each ideas}}
        {{#ifvalue property desired="public"}}
          <div>
            <section  class="card">
              <a href="idea/{{id}}" class = "title">{{title}}</a>
              <p class = "bottom-left"> <i class="fas fa-check"></i>{{tried}} people tried this idea.
                <!-- <i class="fas fa-heart"></i>{{liked}} -->
              </p>
              <!-- <p class= "bottom-right">Provider:<a href="/user/{{name}}">{{name}}</a></p> -->
            </section>
          </div>

        {{/ifvalue}}
      {{/each}}
  </div>
  
    <!-- new bottom bar. better bootstrap -->
