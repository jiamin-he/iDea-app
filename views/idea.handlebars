<div class="tab-content container" data-spy="scroll">
    <div class="tab-pane fade show active" id="newest" role="tabpanel" aria-labelledby="newestSort">
      <br />
        <div class="card-columns">
            <div class="row">
              <div class="col-sm-6">
                <div class="card" style="background-color: #82bdf1">
                  <div class="card-body">
                  <img class="card-img-top img-fluid" style="width:4em; display: block;margin-left: auto;margin-right: auto;"  src="/img/{{idea.feeling}}.png" alt="Card image cap">
                  <h5 class="card-title capitalize" style="text-align: center;">{{idea.title}}</a></h5>
                  

              
                  <p class="card-text" style="text-align: center;">{{idea.description}}
                  <br />
                  <br />
                  <a href="/surprise_list/feeling/{{idea.feeling}}"><span class="badge badge-primary">{{idea.feeling}}</span></a>
                  <a href="/surprise_list/time/{{idea.time}}"><span class="badge badge-success">{{idea.time}}</span></a>
                  <a href="/surprise_list/cost/{{idea.cost}}"><span class="badge badge-warning">{{idea.cost}}</span></a>


                  </p>


              
                    <!-- <p class= "bottom-right">Provider:<a href="/user/{{name}}">{{name}}</a></p> -->
                </div>
                  <div class="card-footer" style="background-color: white;">
                        <small class="text-muted"><i class="fas fa-check"></i>  {{idea.tried}} people tried this idea.</small>

                        {{#ifvalue idea.userTried desired="false"}}

                        <button href="#" class="btn btn-primary" id="tried-out-{{idea.id}}" data-toggle="modal" data-target="#reflection-tips-{{idea.id}}" >I tried it !</button>

                        {{/ifvalue}}
                  </div>
              </div>
          </div>
      </div>

      <h3 style="text-align: center;">
      Reflection
      <!-- add comment/reflection button -->
              <button href="#" class="btn btn-primary" id="tried-{{idea.id}}" data-toggle="modal" data-target="#reflection-{{idea.id}}" ><i class="fas fa-pencil-alt"></i><!-- Add reflections --></button>
      </h3>

      {{#ifvalue idea.userTried desired="true"}}
        <!-- pop up dialog -->
              <div class="modal fade" id="reflection-{{idea.id}}" tabindex="-1" role="dialog" aria-labelledby="reflectionLabel-{{idea.id}}" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">

                    <div class="modal-header">
                      <h5 class="modal-title" id="reflectionLabel-{{idea.id}}">New reflection</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>

                    <div class="modal-body">
                      <form role="form" method="get" action="/idea/tried/details/toTry/{{idea.id}}">
