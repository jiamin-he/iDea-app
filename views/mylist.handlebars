

<!DOCTYPE html>
<html lang="en" >

<head>
  <meta charset="UTF-8">
  <title>My list</title>
  <link rel="stylesheet" href="/css/myListStyle.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>


<div class="container-fluid">
  <div class="top_menu_bar"><h1>My List</h1>
    <a href="add_new_ideas"><i class="fas fa-plus fa-lg top_right_button"></i></a>
  </div>

  <!-- <div class="btn-group" style="width:100%">
    <button style="width:50%">Ideas to Try</button>
    <button style="width:50%">Tried it!</button>
  </div> -->
  <ul class="nav nav-pills nav-justified nav-tabs" role="tablist" id="nav">
    <li class="nav-item">
      <a class="nav-link active" id="toTryMenu" data-toggle="tab" href="#toTry" role="tab" aria-controls="toTry" aria-selected="true">To Try</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="TridMenu" data-toggle="tab" href="#tried" role="tab" aria-controls="tried" aria-selected="false">Tried</a>
    </li>
  </ul>

<div>
  <div class="tab-content container" data-spy="scroll">

    <div class="tab-pane fade show active" id="toTry" role="tabpanel" aria-labelledby="toTryMenu">
      
      <div class="row">
        {{#each ideas}}
          {{#ifvalue myList desired="true"}}
            {{#ifvalue userTried desired="false"}}
        <div class="col-sm-6">
          <div class="card" id="block-{{id}}">
            <div class="card-body">
              <h5 class="card-title"><a href="idea/{{id}}">{{title}}</a></h5>
              <p class="card-text">{{description}}</p>
              <button href="#" class="btn btn-primary tried" id="tried-{{id}}" data-toggle="modal" data-target="#reflectionModal-{{id}}">I tried it !</button>
              
              <!-- pop up dialog -->
              <div class="modal fade" id="reflectionModal-{{id}}" tabindex="-1" role="dialog" aria-labelledby="reflectionModalLabel-{{id}}" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">

                    <div class="modal-header">
                      <h5 class="modal-title" id="reflectionModalLabel-{{id}}">New reflection</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>

                    <div class="modal-body">
                      <form role="form" method="get" action="/idea/tried/mylist/{{id}}">
                        <!-- <div class="form-group">
                          <label for="recipient-name" class="col-form-label">Recipient:</label>
                          <input type="text" class="form-control" id="recipient-name">
                        </div> -->
                        <div class="form-group">
                          <label for="reflection" class="col-form-label">How did you feel trying this idea?</label>
                          <input type="text" class="form-control" placeholder="Write down some cool stories or feelings!" name="reflection"></input>
                        </div>

                        <div class="form-group">
                          <label for="property">Would you like to share your reflection to others?</label>
                          <select class="form-control" name="property" >
                            <option value="1">Yep!</option>
                            <option value="2">Nope...</option>
                          </select>
                        </div>

                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
                          <button type="submit" class="btn btn-primary">Continue</button>
                        </div>

                      </form>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
            {{/ifvalue}}
          {{/ifvalue}}
        {{/each}}
      </div>
  </div>

    

    <div class="tab-pane fade" id="tried" role="tabpanel" aria-labelledby="TridMenu">

      <div class="row">
        {{#each ideas}}
          {{#ifvalue myList desired="true"}}
            {{#ifvalue userTried desired="true"}}
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"> <a href="idea/{{id}}">{{title}}</a></h5>
              <p class="card-text">{{description}}</p>

              <!-- I tried it again button -->
              <button href="#" class="btn btn-primary tried" id="tried-{{id}}" data-toggle="modal" data-target="#reflectionModalAgain-{{id}}">I tried it again!</button>
              
              <!-- pop up dialog -->
              <div class="modal fade" id="reflectionModalAgain-{{id}}" tabindex="-1" role="dialog" aria-labelledby="reflectionModalAgainLabel-{{id}}" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">

                    <div class="modal-header">
                      <h5 class="modal-title" id="reflectionModalAgainLabel-{{id}}">New reflection</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>

                    <div class="modal-body">
                      <form role="form" method="get" action="/idea/tried/mylist/{{id}}">
                        <!-- <div class="form-group">
                          <label for="recipient-name" class="col-form-label">Recipient:</label>
                          <input type="text" class="form-control" id="recipient-name">
                        </div> -->
                        <div class="form-group">
                          <label for="reflection" class="col-form-label">How did you feel trying this idea?</label>
                          <input type="text" class="form-control" placeholder="Write down some cool stories or feelings!" name="reflection"></input>
                        </div>

                        <div class="form-group">
                          <label for="property">Would you like to share your reflection to others?</label>
                          <select class="form-control" name="property" >
                            <option value="1">Yep!</option>
                            <option value="2">Nope...</option>
                          </select>
                        </div>

                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
                          <button type="submit" class="btn btn-primary">Continue</button>
                        </div>

                      </form>
                    </div>
                    
                  </div>
                </div>
              </div>
              <!-- I tried it agian button part -->

              <button class="btn btn-primary" data-toggle="collapse" href="#collapseExample_{{id}}" aria-expanded="false" aria-controls="collapseExample_{{id}}">Reflection</button>
              
              <div class="collapse" id="collapseExample_{{id}}">
                {{#each notes}}
                  <h5>{{date}}</h5>
                  <p>{{reflection}}</p>
                {{/each}}
              </div>
              

            </div>
          </div>
        </div>
            {{/ifvalue}}
          {{/ifvalue}}
        {{/each}}
      </div>
    </div>
  </div>
  
</div>
    
  
  
  <!-- bottom bar -->
    <div class="icon-bar fixed-bottom">
    {{#each bottom-bar}}
    
      <a href="/{{name}}" ><i class="{{class}}"></i>
        <!-- <p>{{name}}</p> -->
      </a>
    
    {{/each}}

    <footer></footer>
    </div>
</div>


  
  <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
