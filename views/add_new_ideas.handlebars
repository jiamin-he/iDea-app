      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Add to...</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="add_to" id="gridRadios1" value="public" checked>
              <label class="form-check-label" for="gridRadios1">
                Community
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="add_to" id="gridRadios2" value="private">
              <label class="form-check-label" for="gridRadios2">
                My list
              </label>
            </div>
          </div>
        </div>
      </fieldset>
