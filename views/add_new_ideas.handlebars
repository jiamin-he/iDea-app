    <!-- as form version -->
    <form role="form" method="get" action="/add">
      <div class="form-group">
        <label for="provider">Provider</label>
        <input type="text" class="form-control"  placeholder="Your Name ~" name="provider">
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control"  placeholder="Your Idea Here!" name="title">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" rows="3" placeholder="Describe your idea briefly !" name="description"></textarea>
      </div>
      <div class="form-group">
        <label for="add_to">Add to...</label>
        <select class="form-control" name="add_to" >
          <option value="1">Community</option>
          <option value="2">Private list</option>
        </select>
      </div>
      <div class="form-group">
        <label for="user_tried">Have you tried it before?</label>
        <select class="form-control" name="user_tried" >
          <option value="1">Yep!</option>
          <option value="2">Nope...</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>



